# It is licensed under the BSD license. The full license text can be found
# in the License.txt file at the root of this project.

set rootpass ""

set timeout 600
set force_conservative 1

proc sh {args} {
    foreach arg $args {
        foreach line [split $arg "\n"] {
            set line [string trim $line]
            if {$line != ""} {
                expect "# "
                send "$line\r"
            }
        }
    }
}

spawn qemu-system-x86_64 \
    -smp 2 \
    -device virtio-scsi \
    -blockdev driver=file,node-name=diskfile,filename=[lindex $argv 0] \
    -blockdev driver=raw,node-name=disk,file=diskfile \
    -device scsi-hd,drive=disk \
    -net nic,model=virtio,macaddr=02:00:00:00:00:01 -net user \
    -nographic

expect "login:"
send "root\r"
expect "assword:"
send "$rootpass\r"

sh {
    pkg install -y git
    pkg install -y go

    shutdown -p now
}

expect eof
